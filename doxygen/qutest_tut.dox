 [3]    current_obj(OBJ_SM, "the_hsm")


     # tests...
 [4] test("QHsmTst init")
 [5] init()
 [6] expect("===RTC===> St-Init  Obj=the_hsm,State=QHsm_top->QHsmTst_s2")
